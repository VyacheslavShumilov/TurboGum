<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HelpScreenFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_support_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Чтобы узнать пароль, обратитесь к разработчику приложения:"
        android:textAlignment="center"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/email_first_txt_view"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:minWidth="350dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="vvshumilov@mail.ru"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/email_second_txt_view"
        app:layout_constraintStart_toStartOf="@+id/email_second_txt_view"
        app:layout_constraintTop_toBottomOf="@+id/txt_support_project" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/email_second_txt_view"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:minWidth="350dp"
        android:text="vyachess14607@gmail.com"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_first_txt_view" />




</androidx.constraintlayout.widget.ConstraintLayout>