<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".ui.liner.LinerFragment">


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_add_favourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:src="@drawable/btn_fav_filled"
        app:layout_constraintBottom_toTopOf="@+id/btn_to_favourite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_to_favourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:src="@drawable/ic_list_favourite"
        app:layout_constraintBottom_toTopOf="@+id/linkVideo"
        app:layout_constraintEnd_toEndOf="@+id/btn_add_favourite"
        app:layout_constraintStart_toStartOf="@+id/btn_add_favourite"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_favourite"
        app:layout_constraintVertical_bias="0.5" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/t031"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/linkVideo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:autoLink="all"
        android:src="@drawable/video"
        app:layout_constraintBottom_toTopOf="@+id/linkVk"
        app:layout_constraintEnd_toEndOf="@+id/btn_add_favourite"
        app:layout_constraintStart_toStartOf="@+id/btn_add_favourite"
        app:layout_constraintTop_toBottomOf="@+id/btn_to_favourite"
        app:layout_constraintVertical_bias="0.5" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/linkVk"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:autoLink="all"
        android:src="@drawable/vk"
        app:layout_constraintBottom_toTopOf="@+id/linkWiki"
        app:layout_constraintEnd_toEndOf="@+id/btn_add_favourite"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/btn_add_favourite"
        app:layout_constraintTop_toBottomOf="@+id/linkVideo"
        app:layout_constraintVertical_bias="0.5" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/linkWiki"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:autoLink="all"
        android:src="@drawable/wiki"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_add_favourite"
        app:layout_constraintStart_toStartOf="@+id/btn_add_favourite"
        app:layout_constraintTop_toBottomOf="@+id/linkVk"
        app:layout_constraintVertical_bias="0.5" />

