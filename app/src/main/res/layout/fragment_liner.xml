<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color"
    tools:context=".ui.liner.LinerFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_add_favourite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_fav"
        app:layout_constraintBottom_toTopOf="@+id/linkVk"
        app:layout_constraintStart_toStartOf="@+id/linerIndex"
        app:layout_constraintTop_toBottomOf="@+id/linerIndex"
        app:layout_constraintVertical_bias="0.5" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/website_societe"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/societe"
        app:layout_constraintBottom_toTopOf="@+id/linkVideo"
        app:layout_constraintEnd_toEndOf="@+id/btn_add_favourite"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_add_favourite"
        app:layout_constraintTop_toBottomOf="@+id/linkVk"
        app:layout_constraintVertical_bias="0.5" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView"
        android:layout_width="440dp"
        android:layout_height="320dp"
        android:layout_marginStart="10dp"
        android:adjustViewBounds="true"
        android:elevation="3dp"
        android:outlineProvider="bounds"
        android:scaleType="fitCenter"
        android:src="@drawable/t031"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.5" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/linkVideo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:autoLink="all"
        android:src="@drawable/video"
        app:layout_constraintBottom_toTopOf="@+id/linkWiki"
        app:layout_constraintEnd_toEndOf="@+id/btn_add_favourite"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_add_favourite"
        app:layout_constraintTop_toBottomOf="@+id/website_societe"
        app:layout_constraintVertical_bias="0.5" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/linkVk"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:autoLink="all"
        android:src="@drawable/vk"
        app:layout_constraintBottom_toTopOf="@+id/website_societe"
        app:layout_constraintEnd_toEndOf="@+id/btn_add_favourite"
        app:layout_constraintStart_toStartOf="@+id/btn_add_favourite"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_favourite"
        app:layout_constraintVertical_bias="0.5" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/linkWiki"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:autoLink="all"
        android:src="@drawable/wiki"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_add_favourite"
        app:layout_constraintStart_toStartOf="@+id/btn_add_favourite"
        app:layout_constraintTop_toBottomOf="@+id/linkVideo"
        app:layout_constraintVertical_bias="0.5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/linerIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@color/liner_txt_color"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Т2# "
        android:textColor="@color/black"
        android:textSize="@dimen/linerTxtSize"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/linerNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/liner_txt_color"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:text="14"
        android:textColor="@color/black"
        android:textSize="@dimen/linerTxtSize"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/linerIndex"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/linerBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Mitsubihi"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/linerNumber"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/linerModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Outlander"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/linerNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/linerNumber" />


    <com.google.android.material.divider.MaterialDivider
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@color/divider_liner_color"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_favourite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/linerIndex"
        app:layout_constraintTop_toBottomOf="@+id/linerNumber" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fav_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Добавить в избранное"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_add_favourite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn_add_favourite"
        app:layout_constraintTop_toTopOf="@+id/btn_add_favourite" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/linkVkTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Группа &quot;Турбо Товарищи&quot;"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/linkVk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/linkVk"
        app:layout_constraintTop_toTopOf="@+id/linkVk" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/website_societe_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Cайт societeturbo.com"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/website_societe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/website_societe"
        app:layout_constraintTop_toTopOf="@+id/website_societe" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/linkVideo_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Видео"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/linkVideo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/linkVideo"
        app:layout_constraintTop_toTopOf="@+id/linkVideo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/linkWikiTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Статья"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/linkWiki"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/linkWiki"
        app:layout_constraintTop_toTopOf="@+id/linkWiki" />



</androidx.constraintlayout.widget.ConstraintLayout>