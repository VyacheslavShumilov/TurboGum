<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color"
    tools:context=".ui.liner.LinerFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/containerFav"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="#0D000000"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/containerVk"
        app:layout_constraintEnd_toEndOf="@+id/materialDivider3"
        app:layout_constraintStart_toStartOf="@+id/materialDivider3"
        app:layout_constraintTop_toBottomOf="@+id/materialDivider3"
        app:layout_constraintVertical_bias="0.5">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_add_favourite"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_fav" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fav_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:text="@string/add_favorite"
            android:textColor="@color/black"
            android:textSize="@dimen/frag_liner_btn_txt" />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/containerVk"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="#0D000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/containerSociete"
        app:layout_constraintEnd_toEndOf="@+id/containerFav"
        app:layout_constraintStart_toStartOf="@+id/containerFav"
        app:layout_constraintTop_toBottomOf="@+id/containerFav"
        app:layout_constraintVertical_bias="0.5">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/linkVk"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:autoLink="all"
            android:src="@drawable/vk" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/linkVkTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:text="@string/vk_societe"
            android:textColor="@color/black"
            android:textSize="@dimen/frag_liner_btn_txt" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/containerSociete"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="#0D000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/containerVideo"
        app:layout_constraintEnd_toEndOf="@+id/containerFav"
        app:layout_constraintStart_toStartOf="@+id/containerFav"
        app:layout_constraintTop_toBottomOf="@+id/containerVk"
        app:layout_constraintVertical_bias="0.5">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/website_societe"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/societe" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/website_societe_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:text="@string/societeturbo_com"
            android:textColor="@color/black"
            android:textSize="@dimen/frag_liner_btn_txt" />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/containerVideo"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="#0D000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/containerWiki"
        app:layout_constraintEnd_toEndOf="@+id/containerFav"
        app:layout_constraintStart_toStartOf="@+id/containerFav"
        app:layout_constraintTop_toBottomOf="@+id/containerSociete"
        app:layout_constraintVertical_bias="0.5">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/linkVideo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:autoLink="all"
            android:src="@drawable/video" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/linkVideo_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:text="@string/video"
            android:textColor="@color/black"
            android:textSize="@dimen/frag_liner_btn_txt" />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/containerWiki"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="#0D000000"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintEnd_toEndOf="@+id/containerFav"
        app:layout_constraintStart_toStartOf="@+id/containerFav"
        app:layout_constraintTop_toBottomOf="@+id/containerVideo">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/linkWiki"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:autoLink="all"
            android:src="@drawable/wiki" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/linkWikiTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:text="@string/article"
            android:textColor="@color/black"
            android:textSize="@dimen/frag_liner_btn_txt" />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="440dp"
        android:layout_height="320dp"
        android:layout_marginStart="10dp"
        android:adjustViewBounds="true"
        android:elevation="3dp"
        android:outlineProvider="bounds"
        android:scaleType="fitCenter"
        android:src="@drawable/t031"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.5"
        android:contentDescription="@string/liner_full_size" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/linerIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@color/liner_txt_color"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/hint_collection"
        android:textColor="@color/black"
        android:textSize="@dimen/frag_fav_liner_index_number"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/linerNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/liner_txt_color"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:text="@string/hint_number_liner"
        android:textColor="@color/black"
        android:textSize="@dimen/frag_fav_liner_index_number"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/linerIndex"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/linerBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/hint_brand"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="@dimen/frag_liner_brand_txt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/linerNumber"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/linerModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/hint_model"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="@dimen/frag_liner_model_txt"
        app:layout_constraintBottom_toBottomOf="@+id/linerNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/linerNumber" />


    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/materialDivider3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@color/divider_liner_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/linerIndex"
        app:layout_constraintTop_toBottomOf="@+id/linerNumber" />

</androidx.constraintlayout.widget.ConstraintLayout>