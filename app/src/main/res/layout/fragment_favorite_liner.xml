<!--        app:layout_constraintVertical_bias="0.0" />-->

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/linkWiki"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:autoLink="all"
        android:src="@drawable/wiki"
        app:layout_constraintBottom_toBottomOf="@+id/divider1"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/scrollView3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/linkVideo"
        app:layout_constraintTop_toTopOf="@+id/divider1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/linerIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@color/liner_txt_color"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/hint_collection"
        android:textColor="@color/black"
        android:textSize="@dimen/frag_fav_liner_index_number"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/linerNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/liner_txt_color"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:text="@string/hint_number_liner"
        android:textColor="@color/black"
        android:textSize="@dimen/frag_fav_liner_index_number"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/linerIndex"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/linerBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/hint_brand"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="@dimen/frag_fav_liner_brand_txt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/linerNumber"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/linerModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/hint_model"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="@dimen/frag_fav_liner_model_txt"
        app:layout_constraintBottom_toBottomOf="@+id/linerNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/linerNumber" />


    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/materialDivider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@color/divider_liner_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/linerIndex"
        app:layout_constraintTop_toBottomOf="@+id/linerNumber" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/note_input_container"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:hint="@string/note"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        android:textColorHint="@color/black"
        app:boxStrokeColor="@color/black"
        app:boxStrokeErrorColor="@color/secondaryDarkColor"
        app:endIconMode="clear_text"
        app:errorTextColor="@color/secondaryDarkColor"
        app:hintTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/materialDivider2"
        app:layout_constraintTop_toBottomOf="@+id/materialDivider2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/note_input"
            style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColorHint="@color/black" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveNoteBtn"
        style="@style/Widget.Material3.Button.IconButton.Filled"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:text="@string/save_note_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/note_input_container"
        app:layout_constraintStart_toStartOf="@+id/note_input_container"
        app:strokeColor="@color/black"
        app:strokeWidth="3dp" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:background="#809C9CA6"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/saveNoteBtn"
        app:layout_constraintEnd_toEndOf="@+id/saveNoteBtn"
        app:layout_constraintStart_toStartOf="@+id/note_input_container"
        app:layout_constraintTop_toBottomOf="@+id/note_input_container">

        <TextView
            android:id="@+id/noteTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/hint_note"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />
    </ScrollView>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider1"
        android:layout_width="3dp"
        android:layout_height="50dp"
        app:dividerColor="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />



</androidx.constraintlayout.widget.ConstraintLayout>